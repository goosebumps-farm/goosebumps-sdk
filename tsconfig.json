{
    "compilerOptions": {
      "module": "esnext",
      "outDir": "dist",
      "target": "esnext",
      "strict": true,
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true
    }
  }